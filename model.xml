<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<catalog>
    <widget>
        <name>asaas-login-widget</name>
        <contextItemName>[BBHOST]</contextItemName>
        <properties>
            <property label="Title" name="title" viewHint="text-input,admin">
                <value type="string">ASAAS Login</value>
            </property>
            <property name="Description">
                <value type="String"/>
            </property>
            <property label="Icon" name="icon" viewHint="admin,designModeOnly">
                <value type="string">login</value>
            </property>
            <property name="src">
                <value type="string">$(itemRoot)/index.html</value>
            </property>
            <property name="thumbnailUrl">
                <value type="string">$(itemRoot)/icon.png</value>
            </property>
            <property name="authenticationUrl">
                <value type="string">http://www.snb.com</value>
            </property>
            <property label="Version" name="version" viewHint="text-input,admin,designModeOnly">
                <value type="string">1.0.3</value>
            </property>
        </properties>
        <tags>
            <tag manageable="true" type="regular">asaas</tag>
            <tag manageable="true" type="section">Authentication</tag>
        </tags>
    </widget>
</catalog>